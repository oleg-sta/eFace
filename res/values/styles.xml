<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CodeFont">
        <item name="android:textColor">@color/all_text</item>
    </style>

    <style name="CodeFontStatsName" parent="@style/CodeFont">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CodeFontStatsValue" parent="@style/CodeFont">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">@color/all_text</item>
        <item name="android:actionBarTabBarStyle">@style/actionBarTabBarStyle</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_color</item>
        <item name="android:displayOptions">showTitle|showCustom|showHome</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/all_text</item>
    </style>

    <style name="actionBarTabBarStyle" parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
    </style>
</resources>