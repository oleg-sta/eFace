<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

        
    <declare-styleable name="MaterialTabHost">

        <!-- Custom attributes -->
        <attr name="hasIcons" format="boolean" />
        <attr name="materialTabsPrimaryColor" format="color" />
        <attr name="accentColor" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="textColor" format="color"  />
        
    </declare-styleable>
</resources>