<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_little_photos"
    android:orientation="vertical" >

    <!--
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/mainLay33"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/mainLay23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E1F5FE"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/start_stop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:alpha="0.5"
                    android:src="@drawable/start" />

                <ImageView
                    android:id="@+id/add_face2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/add_face" />

                <ImageView
                    android:id="@+id/trash"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/full_trash" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_message"
                style="CodeFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Состояние"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/mainLay333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin" >

                <LinearLayout
                    android:id="@+id/mainLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/name"
                            style="CodeFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Лица" />

                        <GridView
                            android:id="@+id/listFaces"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="2dp"
                            android:verticalSpacing="2dp" >
                        </GridView>
                    </LinearLayout>

                    <View
                        android:id="@+id/vie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/listOfManLayout"
                        android:layout_width="80dp"
                        android:layout_height="fill_parent"
                        android:gravity="right"
                        android:orientation="vertical" >

                        <TextView
                            style="CodeFont"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Люди" />

                        <ListView
                            android:id="@+id/listOfMan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>