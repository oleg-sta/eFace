<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_little_photos"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <GridView
            android:id="@+id/listFaces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="4dp"
            android:numColumns="4"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:verticalSpacing="4dp" >
        </GridView>

        <ImageView
            android:id="@+id/add_face2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"
            android:src="@drawable/add_face" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/action_bar_color"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <TextView
                style="@style/CodeFontStatsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:typeface="sans"
                android:text="фото на телефоне" />

            <TextView
                style="@style/CodeFontStatsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                style="@style/CodeFontStatsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="обработано фото"
                android:typeface="sans"
                android:textColor="@color/all_text" />

            <TextView
                style="@style/CodeFontStatsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/all_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <TextView
                style="@style/CodeFontStatsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="найдено лиц"
                android:typeface="sans"
                android:textColor="@color/all_text" />

            <TextView
                style="@style/CodeFontStatsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/all_text" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/background_color_little_photos" />

    <LinearLayout
        android:id="@+id/men_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/action_button_color"
        android:orientation="horizontal" >

        <android.support.v4.view.ViewPager
            android:id="@+id/aaa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ru.trolleg.faces.views.SquaredImageView
                android:id="@+id/trash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingBottom="0dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="0dp"
                android:src="@drawable/full_trash" />

            <TextView
                android:id="@+id/name_face"
                style="CodeFont"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:padding="0dp"
                android:singleLine="true"
                android:text="Корзина"
                android:textSize="12sp" />
        </LinearLayout>
        <!--
             <ImageView
            android:id="@+id/trash"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:src="@drawable/full_trash" />
        -->
    </LinearLayout>

</LinearLayout>