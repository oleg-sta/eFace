<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00EDFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/mainLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/start_stop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="left"
            android:src="@drawable/start" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/add_face2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/add_face" />

            <ImageView
                android:id="@+id/first_face"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/full_trash" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Состояние"
            style="CodeFont"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="invisible" />

        <View
            android:id="@+id/face_first_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Лица"
                    android:layout_gravity="center_horizontal"
                    style="CodeFont"
                    />
                <GridView
                    android:id="@+id/listFaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="2dp"
                    android:verticalSpacing="2dp" >
                </GridView>
            </LinearLayout>

            <View
                android:id="@+id/vie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000" />

            <LinearLayout
                android:id="@+id/listOfManLayout"
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:orientation="vertical" >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Люди"
                    android:layout_gravity="center_horizontal"
                    style="CodeFont"
                    />
                <ListView
                    android:id="@+id/listOfMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >
                </ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>